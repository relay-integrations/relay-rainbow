{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "connection": {
      "type": "object",
      "description": "Alcatel Lucent Rainbow credentials to use",
      "properties": {
        "loginEmail": {
          "type": "string",
          "description": "The Rainbow login email to use"
        },
        "password": {
          "type": "string",
          "description": "The Rainbow login password to use"
        },
        "appID": {
          "type": "string",
          "description": "The Rainbow App ID to use"
        },
        "appSecret": {
          "type": "string",
          "description": "The Rainbow App Secret to use"
        }
      },
      "required": [
        "loginEmail",
        "password",
        "appID",
        "appSecret"
      ]
    },
    "bubbleName": {
      "type": "string",
      "description": "Bubble to send message to."
    },
    "message": {
      "type": "string",
      "description": "Message to send."
    }
  },
  "required": [
    "connection",
    "bubbleName",
    "message"
  ],
  "additionalProperties": false
}